<div class="container">
	<div class="row">
		<div class="col-md-5">
			<%= div_for(comment) do %>
			<div>
				<p class="lead"><%= comment.body %></p>
				<p>
					<small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.username.capitalize %></small>
				</p>
			</div>
			<div class="btn-group pull-right">
				<% if comment.user == current_user -%>
					<%= link_to 'Update Comment', edit_post_comment_path(@post, comment), class: "btn btn-default" %>
					<%= link_to 'Delete Comment', "/posts/#{@post.id}/comments/#{comment.id}", method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
				<% end %>
			</div>
			<% end %>
		</div>
	</div>
</div>
