<div class="col-md-4">
  <div id="hot-picks-content">
    <h4>Hot Pick!</h4>
    <% @posts.take(3).each do |post| %>
    <div class="hot_picks_nav">
      <h4><%= post.title %></h4>
      <div class="col-xs-3">
        <a href="#" class="thumbnail">
          <%= image_tag("125x125") %>
        </a>
      </div>
      <div>
        <p>
          <%= truncate post.body, length: 200 %>
          <a href="/posts/<%= post.id %>">Read More</a>
        </p>
        <strong>
          Posted by <%= post.user.username.capitalize %> <%= time_ago_in_words(post.created_at) %> ago.
        </strong>
      </div>
    </div>
    <% end %>
  </div>
</div>
