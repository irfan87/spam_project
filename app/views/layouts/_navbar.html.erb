<div class="bs-example">
	<nav role="navigation" class="nav navbar-default">
		<div class="navbar-header">
			<button class="navbar-toggle" type="button" data-target="#navbarCollapse" data-toggle="collapse">
				<span class="sr-only">Toggle Navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a href="<%= root_path%>"><%= image_tag "spamlogo2.png", alt: "SPAM", class: "navbar-brand" %></a>
		</div>
		<div id="navbarCollapse" class="collapse navbar-collapse">
			<ul class="nav navbar-nav">
				<li><a href="/">Posts</a></li>
        <li><a href="#">Category</a></li>
        <li><a href="#">Video</a></li>
        <li><a href="#">About Us</a></li>
			</ul>
			<%= form_tag posts_path, role:"search", class: "navbar-form navbar-left", method: :get do %>
      	<div class="form-group">
      		<%= text_field_tag :q, nil, placeholder: "Search here", class: "form-control", id: "search" %>
      	</div>
      	<button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
			<% end %>
			<ul class="nav navbar-nav navbar-right">
				<% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-user"></i> <%= current_user.email %> <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li>
							<% if can? :create, Post %>
              <%= link_to "New Post", new_post_path %>
							<% end %>
            </li>
            <li>
            <%= link_to "Edit Account", edit_user_registration_path %>
            </li>
            <li role="separator" class="divider"></li>
            <li>
            <%= link_to "Sign out", destroy_user_session_path, method: "delete" %>
            </li>
          </ul>
        </li>
        <% else %>
        <li><a href="/users/sign_in">Sign In</a></li>
        <% end %>
			</ul>
		</div>
	</nav>
</div>
