<div class="container">
  <div class="row">
    <p id="notice">
      <%= notice %>
      <% if @posts.suggestions.any? %>
        <p>Did you mean <%= @posts.suggestions.first %></p>
      <% end %>
    </p>
  </div>
  <div class="row">
    <div class="col-md-8">
      <h2>Hot Education Topic!</h2>
      <% @posts.each do |post| %>
      <div class="post_contents">
        <h3><%= post.title %></h3>
        <div>
          <p>Views by <%= post.click_count %> peoples.</p>
        </div>
        <div>
          <p>
            <%= truncate post.body.html_safe, length:550 %>
            <a href="/posts/<%= post.id %>">Read More</a>
          </p>
        </div>
        <div>
          <strong>Posted by 
            <%= post.user.username.capitalize %> about 
            <%= time_ago_in_words(post.updated_at) %> ago.
          </strong>
        </div>
        <p>
          
        </p>
      </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <h4>Hot Pick!</h4>
      <% @posts.take(2).each do |post| %>
      <div>
        <h4><%= post.title %></h4>
        <div class="col-xs-3">
          <a href="#" class="thumbnail">
            <img src="../images/125x125.jpg" alt="125x125">
          </a>
        </div>
        <div>
          <p>
            <%= truncate post.body.html_safe, length: 200 %>
            <a href="/posts/<%= post.id %>">Read More</a>
          </p>
          <strong>
            Posted by <%= post.user.username.capitalize %> <%= time_ago_in_words(post.updated_at) %> ago.
          </strong>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>