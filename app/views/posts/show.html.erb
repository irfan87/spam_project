<div class="container">
  <div class="row">
    <div class="col-md-8">
      <p id="notice"><%= notice %></p>
      <h1><%= @post.title %></h1>
      <p>
        <strong><%= @post.user.username.capitalize %> created this page <%= time_ago_in_words(@post.created_at) %> ago</strong>  
      </p>
      <p>
        <strong>Visitors: <%= @post.click_count %></strong>
      </p>
      <p>
          <div>
            <%= link_to image_tag(@post.photo_url(:thumb)), @post.photo_url %>
            <%= @post.body.html_safe %>
          </div>
      </p>
      <i>filed under:
          <% a = [] %> 
            <% @post.categories.each do |category| %>
              <%a << category.group %>  
            <% end %>
          <%= a.join(', ')%></i>
      <br>
      <br>
      <%= render "posts/comments"%>
    </div>
  </div>
</div>