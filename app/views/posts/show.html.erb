<div id="container">
  <h1> Post Show Page </h1>
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>
    View counts: <%= @post.click_count %><br>
    Category:  <%= @post.category %>
    <p>
      <strong>Body:</strong>
      <%= @post.body %>
    </p>

    <div id="comments_container">
      <h2>Comments:</h2> 
      <tbody>
        <% @post.comments.each do |comment| %>
          <tr>
            <td><%= comment.body %></td>
            <td><%= link_to 'Edit Comment', "/posts/#{@post.id}/comments/#{comment.id}/edit" %></td> | 
            <td><%= link_to 'Delete Comment', "/posts/#{@post.id}/comments/#{comment.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <tr>
              <td>Comment in <%= time_ago_in_words(comment.updated_at) %> ago.</td>
            </tr>
          </tr><br>
        <% end %>
      </tbody>  
      <br>
      <%= link_to 'New Comment', new_post_comment_path(@post) %><br>
      <br>
    </div>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>

</div>